<h1>Login</h1>

<%= form_tag user_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <br/>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br/>
  </div>

  <div class="actions">
    <div class="row demo-row">
      <div class="span3">
        <!-- <input name="commit"  value="Save changes" /> -->
        <input class="btn btn-large btn-block" type="submit" value="Login">
      </div>
    </div>
  </div>

<% end %>

